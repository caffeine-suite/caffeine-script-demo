# CaffeineScript: Slide.caf
import &ArtSuite

class Slide extends Component
  render: ->
    {title, body, align} = @props

    Element
      &StyleProps.slideLayout

      title && TextElement
        &StyleProps.slideTitle
        text:   title
        unless body
          align: :centerCenter
          location: ps: .5
          axis: .5

      body && TextElement
        &StyleProps.slideBodyText
        text:   body
        align:  align || :centerCenter
